{
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "published": {
      "type": "date",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    },
    "img": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    }
  }
}
